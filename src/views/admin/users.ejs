<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">إدارة المستخدم</h3>
                        <div class="d-flex gap-2">
                            <a href="/admin/users/export-excel" class="btn btn-success">
                                <i class="fas fa-file-excel"></i> تصدير Excel
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <div class="row mb-4">
                        <div class="col-md-8">

                                إجمالي المستخدمين: <%= pagination.totalUsers %>
                            </small>
                        </div>
                    </div>


                    <!-- Tabs -->
                    <ul class="nav nav-tabs mb-4" id="userTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="all-users-tab" data-bs-toggle="tab" data-bs-target="#all-users" type="button" role="tab">
                                جميع المستخدمين
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="students-tab" data-bs-toggle="tab" data-bs-target="#students" type="button" role="tab">
                                الطلاب
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="staff-tab" data-bs-toggle="tab" data-bs-target="#staff" type="button" role="tab">
                                الأدمن
                            </button>
                        </li>
                    </ul>

                    <!-- Tab Content -->
                    <div class="tab-content" id="userTabsContent">
                        <!-- All Users Tab -->
                        <div class="tab-pane fade show active" id="all-users" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>الاسم</th>
                                            <th>البريد الإلكتروني</th>
                                            <th>رقم الهاتف</th>
                                            <th>رقم هاتف ولي الأمر</th>
                                            <th>الدور</th>
                                            <th>الحالة</th>
                                            <th>تاريخ التسجيل</th>
                                            <th>النشاطات</th>
                                        </tr>
                                    </thead>
                                    <tbody id="allUsersTableBody">
                                        <% (students.concat(staff)).forEach(user => { %>
                                            <tr>
                                                <td><%= user.firstName %> <%= user.lastName %></td>
                                                <td><%= user.email %></td>
                                                <td><%= user.phoneNumber || 'غير مدخل' %></td>
                                                <td><%= user.parentPhoneNumber || 'غير مدخل' %></td>
                                                <td>
                                                    <span class="badge bg-<%= user.role === 'admin' ? 'danger' : user.role === 'teacher' ? 'primary' : 'info' %>">
                                                        <%= user.role === 'admin' ? 'أدمن' : user.role === 'teacher' ? 'معلم' : 'طالب' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= user.isActive ? 'success' : 'warning' %>">
                                                        <%= user.isActive ? 'نشط' : 'غير نشط' %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <% if (user.role === 'student') { %>
                                                            <a href="/admin/users/students/<%= user._id %>" class="btn btn-info">
                                                                <i class="fas fa-chart-line"></i> عرض التقدم
                                                            </a>
                                                        <% } %>
                                                        <% if (user.role !== 'admin') { %>
                                                            <button class="btn btn-warning toggle-status" data-user-id="<%= user._id %>" data-current-status="<%= user.isActive %>">
                                                                <i class="fas fa-<%= user.isActive ? 'ban' : 'check' %>"></i>
                                                                <%= user.isActive ? 'إلغاء تنشيط' : 'تنشيط' %>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Students Tab -->
                        <div class="tab-pane fade" id="students" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>الاسم</th>
                                            <th>البريد الالكتروني</th>
                                            <th>رقم الهاتف</th>
                                            <th>رقم هاتف ولي الأمر</th>
                                            <th>الاختبارات الممتحنة</th>
                                            <th>متوسط الدرجات</th>
                                            <th>النشاطات</th>
                                        </tr>
                                    </thead>
                                    <tbody id="studentsTableBody">
                                        <% students.forEach(student => { %>
                                            <tr>
                                                <td>
                                                    <%= student.firstName %> <%= student.lastName %>
                                                    <% if (!student.isActive) { %>
                                                        <span class="badge bg-warning">غير نشط</span>
                                                    <% } %>
                                                </td>
                                                <td><%= student.email %></td>
                                                <td><%= student.phoneNumber || 'غير مدخل' %></td>
                                                <td><%= student.parentPhoneNumber || 'غير مدخل' %></td>
                                                <td><%= student.examCount %></td>
                                                <td>
                                                    <% if (student.averageScore) { %>
                                                        <span class="badge bg-<%= student.averageScore >= 70 ? 'success' : student.averageScore >= 50 ? 'warning' : 'danger' %>">
                                                            <%= student.averageScore.toFixed(1) %>%
                                                        </span>
                                                    <% } else { %>
                                                        N/A
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/admin/users/students/<%= student._id %>" class="btn btn-info">
                                                            <i class="fas fa-chart-line"></i> عرض التقدم
                                                        </a>
                                                        <button class="btn btn-warning toggle-status" data-user-id="<%= student._id %>" data-current-status="<%= student.isActive %>">
                                                            <i class="fas fa-<%= student.isActive ? 'ban' : 'check' %>"></i>
                                                            <%= student.isActive ? 'إلغاء تنشيط' : 'تنشيط' %>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Staff Tab -->
                        <div class="tab-pane fade" id="staff" role="tabpanel">
                            <div class="mb-3">
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStaffModal">
                                    <i class="fas fa-plus"></i> إضافة مستخدم جديد
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>الاسم</th>
                                            <th>البريد الالكتروني</th>
                                            <th>رقم الهاتف</th>
                                            <th>رقم هاتف ولي الأمر</th>
                                            <th>الدور</th>
                                            <th>الحالة</th>
                                            <th>النشاطات</th>
                                        </tr>
                                    </thead>
                                    <tbody id="staffTableBody">
                                        <% staff.forEach(member => { %>
                                            <tr>
                                                <td><%= member.firstName %> <%= member.lastName %></td>
                                                <td><%= member.email %></td>
                                                <td><%= member.phoneNumber || 'غير مدخل' %></td>
                                                <td><%= member.parentPhoneNumber || 'غير مدخل' %></td>
                                                <td>
                                                    <span class="badge bg-<%= member.role === 'admin' ? 'danger' : 'primary' %>">
                                                        <%= member.role %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= member.isActive ? 'success' : 'warning' %>">
                                                        <%= member.isActive ? 'نشط' : 'غير نشط' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <% if (member.role !== 'admin') { %>
                                                            <button class="btn btn-warning toggle-status" data-user-id="<%= member._id %>" data-current-status="<%= member.isActive %>">
                                                                <i class="fas fa-<%= member.isActive ? 'ban' : 'check' %>"></i>
                                                                <%= member.isActive ? 'إلغاء التنشيط' : 'تنشيط' %>
                                                            </button>
                                                            <button class="btn btn-danger delete-user" data-user-id="<%= member._id %>">
                                                                <i class="fas fa-trash"></i> حذف
                                                            </button>
                                                        <% } else { %>
                                                            <span class="text-muted">
                                                                <i class="fas fa-lock"></i> غير مصرح
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Pagination Controls -->

                        <ul class="pagination justify-content-center">
                            <!-- Previous Page -->
                            <% if (pagination.hasPrev) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagination.prevPage %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                        <i class="fas fa-chevron-right"></i> السابق
                                    </a>
                                </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <span class="page-link"><i class="fas fa-chevron-right"></i> السابق</span>
                                </li>
                            <% } %>

                            <!-- Page Numbers -->
                            <% 
                            let startPage = Math.max(1, pagination.currentPage - 2);
                            let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                            %>
                            
                            <% if (startPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %>">1</a>
                                </li>
                                <% if (startPage > 2) { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                <% } %>
                            <% } %>

                            <% for (let i = startPage; i <= endPage; i++) { %>
                                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } %>

                            <% if (endPage < pagination.totalPages) { %>
                                <% if (endPage < pagination.totalPages - 1) { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                <% } %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagination.totalPages %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                        <%= pagination.totalPages %>
                                    </a>
                                </li>
                            <% } %>

                            <!-- Next Page -->
                            <% if (pagination.hasNext) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagination.nextPage %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                        التالي <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <span class="page-link">التالي <i class="fas fa-chevron-left"></i></span>
                                </li>
                            <% } %>
                        </ul>

                        <!-- Page Info -->
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                صفحة <%= pagination.currentPage %> من <%= pagination.totalPages %> 
                                (إجمالي <%= pagination.totalUsers %> مستخدم)
                            </small>
                        </div>
                    </nav>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Staff Modal -->
