<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">إدارة المستخدم</h3>
                </div>
                <div class="card-body">
                    <!-- Tabs -->
                    <ul class="nav nav-tabs mb-4" id="userTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="all-users-tab" data-bs-toggle="tab" data-bs-target="#all-users" type="button" role="tab">
                                جميع المستخدمين
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="students-tab" data-bs-toggle="tab" data-bs-target="#students" type="button" role="tab">
                                الطلاب
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="staff-tab" data-bs-toggle="tab" data-bs-target="#staff" type="button" role="tab">
                                الأدمن
                            </button>
                        </li>
                    </ul>

                    <!-- Tab Content -->
                    <div class="tab-content" id="userTabsContent">
                        <!-- All Users Tab -->
                        <div class="tab-pane fade show active" id="all-users" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>الاسم</th>
                                            <th>البريد الإلكتروني</th>
                                            <th>رقم الهاتف</th>
                                            <th>رقم هاتف ولي الأمر</th>
                                            <th>الدور</th>
                                            <th>الحالة</th>
                                            <th>تاريخ التسجيل</th>
                                            <th>النشاطات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% (students.concat(staff)).forEach(user => { %>
                                            <tr>
                                                <td><%= user.firstName %> <%= user.lastName %></td>
                                                <td><%= user.email %></td>
                                                <td><%= user.phoneNumber || 'غير مدخل' %></td>
                                                <td><%= user.parentPhoneNumber || 'غير مدخل' %></td>
                                                <td>
                                                    <span class="badge bg-<%= user.role === 'admin' ? 'danger' : user.role === 'teacher' ? 'primary' : 'info' %>">
                                                        <%= user.role === 'admin' ? 'أدمن' : user.role === 'teacher' ? 'معلم' : 'طالب' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= user.isActive ? 'success' : 'warning' %>">
                                                        <%= user.isActive ? 'نشط' : 'غير نشط' %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <% if (user.role === 'student') { %>
                                                            <a href="/admin/users/students/<%= user._id %>" class="btn btn-info">
                                                                <i class="fas fa-chart-line"></i> عرض التقدم
                                                            </a>
                                                        <% } %>
                                                        <% if (user.role !== 'admin') { %>
                                                            <button class="btn btn-warning toggle-status" data-user-id="<%= user._id %>" data-current-status="<%= user.isActive %>">
                                                                <i class="fas fa-<%= user.isActive ? 'ban' : 'check' %>"></i>
                                                                <%= user.isActive ? 'إلغاء تنشيط' : 'تنشيط' %>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Students Tab -->
                        <div class="tab-pane fade" id="students" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>الاسم</th>
                                            <th>البريد الالكتروني</th>
                                            <th>رقم الهاتف</th>
                                            <th>رقم هاتف ولي الأمر</th>
                                            <th>الاختبارات الممتحنة</th>
                                            <th>متوسط الدرجات</th>
                                            <th>النشاطات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% students.forEach(student => { %>
                                            <tr>
                                                <td>
                                                    <%= student.firstName %> <%= student.lastName %>
                                                    <% if (!student.isActive) { %>
                                                        <span class="badge bg-warning">غير نشط</span>
                                                    <% } %>
                                                </td>
                                                <td><%= student.email %></td>
                                                <td><%= student.phoneNumber || 'غير مدخل' %></td>
                                                <td><%= student.parentPhoneNumber || 'غير مدخل' %></td>
                                                <td><%= student.examCount %></td>
                                                <td>
                                                    <% if (student.averageScore) { %>
                                                        <span class="badge bg-<%= student.averageScore >= 70 ? 'success' : student.averageScore >= 50 ? 'warning' : 'danger' %>">
                                                            <%= student.averageScore.toFixed(1) %>%
                                                        </span>
                                                    <% } else { %>
                                                        N/A
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/admin/users/students/<%= student._id %>" class="btn btn-info">
                                                            <i class="fas fa-chart-line"></i> عرض التقدم
                                                        </a>
                                                        <button class="btn btn-warning toggle-status" data-user-id="<%= student._id %>" data-current-status="<%= student.isActive %>">
                                                            <i class="fas fa-<%= student.isActive ? 'ban' : 'check' %>"></i>
                                                            <%= student.isActive ? 'إلغاء تنشيط' : 'تنشيط' %>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Staff Tab -->
                        <div class="tab-pane fade" id="staff" role="tabpanel">
                            <div class="mb-3">
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStaffModal">
                                    <i class="fas fa-plus"></i> إضافة مستخدم جديد
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>الاسم</th>
                                            <th>البريد الالكتروني</th>
                                            <th>رقم الهاتف</th>
                                            <th>رقم هاتف ولي الأمر</th>
                                            <th>الدور</th>
                                            <th>الحالة</th>
                                            <th>النشاطات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% staff.forEach(member => { %>
                                            <tr>
                                                <td><%= member.firstName %> <%= member.lastName %></td>
                                                <td><%= member.email %></td>
                                                <td><%= member.phoneNumber || 'غير مدخل' %></td>
                                                <td><%= member.parentPhoneNumber || 'غير مدخل' %></td>
                                                <td>
                                                    <span class="badge bg-<%= member.role === 'admin' ? 'danger' : 'primary' %>">
                                                        <%= member.role %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= member.isActive ? 'success' : 'warning' %>">
                                                        <%= member.isActive ? 'نشط' : 'غير نشط' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <% if (member.role !== 'admin') { %>
                                                            <button class="btn btn-warning toggle-status" data-user-id="<%= member._id %>" data-current-status="<%= member.isActive %>">
                                                                <i class="fas fa-<%= member.isActive ? 'ban' : 'check' %>"></i>
                                                                <%= member.isActive ? 'إلغاء التنشيط' : 'تنشيط' %>
                                                            </button>
                                                            <button class="btn btn-danger delete-user" data-user-id="<%= member._id %>">
                                                                <i class="fas fa-trash"></i> حذف
                                                            </button>
                                                        <% } else { %>
                                                            <span class="text-muted">
                                                                <i class="fas fa-lock"></i> غير مصرح
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Staff Modal -->
<div class="modal fade" id="addStaffModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">إضافة ادمن جديد</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/users/staff" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">الاسم الاول</label>
                        <input type="text" class="form-control" name="firstName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">الاسم الاخير</label>
                        <input type="text" class="form-control" name="lastName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">البريد الالكتروني</label>
                        <input type="email" class="form-control" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">رقم الهاتف</label>
                        <input type="tel" class="form-control" name="phoneNumber" 
                               pattern="^01[0-9]{9}$" placeholder="01xxxxxxxxx" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">رقم هاتف ولي الأمر</label>
                        <input type="tel" class="form-control" name="parentPhoneNumber" 
                               pattern="^01[0-9]{9}$" placeholder="01xxxxxxxxx" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">كلمة المرور</label>
                        <input type="password" class="form-control" name="password" required 
                               minlength="6" placeholder="Minimum 6 characters">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">الدور</label>
                        <select class="form-select" name="role" required>
                            <option value="teacher">معلم</option>
                            <option value="admin">ادمن</option>
                            <option value="student">طالب</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary">إضافة مستخدم جديد</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle user status
    document.querySelectorAll('.toggle-status').forEach(button => {
        button.addEventListener('click', function() {
            const userId = this.dataset.userId;
            const currentStatus = this.dataset.currentStatus === 'true';
            
            if (confirm(`هل انت متأكد انك تريد ${currentStatus ? 'deactivate' : 'activate'} هذا المستخدم?`)) {
                fetch(`/admin/users/${userId}/toggle-status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'CSRF-Token': '<%= csrfToken %>'
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error updating user status');
                    }
                });
            }
        });
    });

    // Delete user
    document.querySelectorAll('.delete-user').forEach(button => {
        button.addEventListener('click', function() {
            const userId = this.dataset.userId;
            
            if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
                fetch(`/admin/users/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                        'CSRF-Token': '<%= csrfToken %>'
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error deleting user');
                    }
                });
            }
        });
    });
});
</script>

