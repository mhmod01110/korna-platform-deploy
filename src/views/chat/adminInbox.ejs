<%- contentFor('body') %>

<div class="container py-4">
	<h1 class="mb-3">Admin Chat Inbox</h1>
	<div class="list-group">
		<% if (conversations && conversations.length) { %>
			<% conversations.forEach(function(conv) { %>
				<a href="/chat/admin/<%= conv.studentId._id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
					<span>
						<strong><%= conv.studentId.firstName %> <%= conv.studentId.lastName %></strong>
						<small class="text-muted ms-2">Updated <%= new Date(conv.lastMessageAt).toLocaleString() %></small>
					</span>
					<span>
						<% if (conv.adminUnreadCount > 0) { %>
							<span class="badge bg-primary rounded-pill"><%= conv.adminUnreadCount %></span>
						<% } %>
					</span>
				</a>
			<% }) %>
		<% } else { %>
			<div class="alert alert-info">No conversations yet.</div>
		<% } %>
	</div>
</div>

