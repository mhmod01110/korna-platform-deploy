<%- contentFor('content') %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
        <div class="mb-8">
            <i class="fas fa-exclamation-triangle text-red-600 text-8xl mb-4"></i>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">500 - خطأ في الخادم</h2>
            <p class="text-gray-600">هناك خطأ ما على جانبنا. يرجى المحاولة مرة أخرى لاحقًا.</p>
            
            <% if (process.env.NODE_ENV === 'development' && error) { %>
                <div class="mt-4 p-4 bg-red-50 rounded-lg">
                    <p class="text-red-700 font-mono text-sm text-left whitespace-pre-wrap"><%= error.stack %></p>
                </div>
            <% } %>
        </div>
        
        <div class="mt-6">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>العودة إلى الرئيسية
            </a>
            <button onclick="history.back()" class="btn btn-secondary ms-3">
                <i class="fas fa-arrow-left me-2"></i>العودة
            </button>
        </div>
    </div>
</div> 