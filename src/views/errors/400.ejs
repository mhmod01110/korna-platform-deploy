<%- contentFor('content') %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
        <div class="mb-8">
            <i class="fas fa-exclamation-circle text-orange-500 text-8xl mb-4"></i>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">400 - طلب غير صالح</h2>
            <p class="text-gray-600"><%= message || 'لا يمكن معالجة الطلب.' %></p>
            
            <% if (process.env.NODE_ENV === 'development' && error) { %>
                <div class="mt-4 p-4 bg-orange-50 rounded-lg">
                    <p class="text-orange-700 font-mono text-sm text-left"><%= error.message %></p>
                </div>
            <% } %>
        </div>
        
        <div class="mt-6">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>عودة
            </a>
            <button onclick="history.back()" class="btn btn-secondary ms-3">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div> 