<%- contentFor('body') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><%= exam.title %> - التقديمات</h3>
                <a href="/exams/<%= exam._id %>" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> العودة إلى الاختبار
                </a>
            </div>
        </div>
        <div class="card-body">
            <!-- Exam Info -->
            <div class="mb-4">
                <p class="mb-1"><strong>القسم:</strong> <%= exam.department.name %></p>
                <p class="mb-1"><strong>صاحب الاختبار:</strong> <%= exam.createdBy.firstName %> <%= exam.createdBy.lastName %></p>
                <p class="mb-0"><strong>إجمالي التقديمات:</strong> <%= submissions.length %></p>
            </div>

            <!-- Bulk Actions -->
            <% if (submissions.length > 0) { %>
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary btn-sm" onclick="selectAllSubmissions()">
                            <i class="fas fa-check-square"></i> تحديد الكل
                        </button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="clearSelection()">
                            <i class="fas fa-square"></i> إلغاء التحديد
                        </button>
                        <button class="btn btn-success btn-sm" id="bulkGradeBtn" onclick="showBulkGrading()" disabled>
                            <i class="fas fa-clipboard-check"></i> تقييم جماعي
                        </button>
                    </div>
                    <div>
                        <span class="badge bg-info">
                            إجمالي: <%= submissions.length %> | 
                            غير مقيم: <%= submissions.filter(s => s.status !== 'GRADED').length %>
                        </span>
                    </div>
                </div>
            <% } %>

            <!-- Submissions Table -->
            <% if (submissions.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="30">
                                    <input type="checkbox" id="selectAllCheckbox" onchange="toggleSelectAll()">
                                </th>
                                <th>الطلاب</th>
                                <th>تاريخ التقديم</th>
                                <th>الحالة</th>
                                <th>الدرجة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% submissions.forEach(submission => { %>
                                <tr>
                                    <td>
                                        <input type="checkbox" class="submission-checkbox" 
                                               value="<%= submission._id %>" 
                                               onchange="updateBulkActions()"
                                               <% if (submission.status === 'GRADED') { %>disabled<% } %>>
                                    </td>
                                    <td>
                                        <%= submission.studentId.firstName %> <%= submission.studentId.lastName %>
                                        <br>
                                        <small class="text-muted"><%= submission.studentId.email %></small>
                                    </td>
                                    <td><%= new Date(submission.submittedAt).toLocaleString() %></td>
                                    <td>
                                        <span class="badge bg-<%= submission.status === 'GRADED' ? 'success' : 'warning' %>">
                                            <%= submission.status === 'GRADED' ? 'مُقيَّم' : 'قيد المراجعة' %>
                                            <% if (submission.status === 'GRADED') { %>
                                                (<%= submission.projectSubmission.marksObtained %>/<%= submission.examId.projectTotalMarks || submission.examId.totalMarks %>)
                                            <% } %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (submission.status === 'GRADED') { %>
                                            <%= submission.projectSubmission.marksObtained %>/<%= exam.projectTotalMarks || exam.totalMarks %>
                                            (<%= ((submission.projectSubmission.marksObtained / (exam.projectTotalMarks || exam.totalMarks)) * 100).toFixed(1) %>%)
                                        <% } else { %>
                                            قيد المراجعة
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <% if (submission.projectSubmission.files && submission.projectSubmission.files.length > 0) { %>
                                                <!-- Multiple files (new format) -->
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-sm btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="fas fa-download"></i> عرض الملفات (<%= submission.projectSubmission.files.length %>)
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <% submission.projectSubmission.files.forEach((file, index) => { %>
                                                            <li>
                                                                <a class="dropdown-item" href="<%= file.fileUrl %>" target="_blank">
                                                                    <i class="fas fa-file"></i> <%= file.fileName %>
                                                                    <small class="text-muted">(<%= Math.round(file.fileSize / 1024) %> KB)</small>
                                                                </a>
                                                            </li>
                                                        <% }); %>
                                                    </ul>
                                                </div>
                                            <% } else if (submission.projectSubmission.fileUrl) { %>
                                                <!-- Single file (legacy format) -->
                                                <a href="<%= submission.projectSubmission.fileUrl %>" 
                                                   target="_blank"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-download"></i> عرض التقديم
                                                </a>
                                            <% } %>
                                            <a href="/exams/<%= exam._id %>/submissions/<%= submission._id %>/grade" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-check-circle"></i> 
                                                <%= submission.status === 'GRADED' ? 'تحديث الدرجة' : 'تقييم' %>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> لا يوجد تقديمات بعد.
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Bulk Grading Modal -->
<div class="modal fade" id="bulkGradingModal" tabindex="-1" aria-labelledby="bulkGradingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bulkGradingModalLabel">التقييم الجماعي</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="selectedSubmissionsInfo" class="mb-3"></div>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> 
                    سيتم فتح كل تقديم في تبويب منفصل للتقييم السريع
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-primary" onclick="openSelectedForGrading()">
                    <i class="fas fa-external-link-alt"></i> فتح للتقييم
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function toggleSelectAll() {
    const selectAllCheckbox = document.getElementById('selectAllCheckbox');
    const submissionCheckboxes = document.querySelectorAll('.submission-checkbox:not(:disabled)');
    
    submissionCheckboxes.forEach(checkbox => {
        checkbox.checked = selectAllCheckbox.checked;
    });
    
    updateBulkActions();
}

function selectAllSubmissions() {
    document.getElementById('selectAllCheckbox').checked = true;
    toggleSelectAll();
}

function clearSelection() {
    document.getElementById('selectAllCheckbox').checked = false;
    toggleSelectAll();
}

function updateBulkActions() {
    const selectedCheckboxes = document.querySelectorAll('.submission-checkbox:checked');
    const bulkGradeBtn = document.getElementById('bulkGradeBtn');
    
    if (selectedCheckboxes.length > 0) {
        bulkGradeBtn.disabled = false;
        bulkGradeBtn.innerHTML = `<i class="fas fa-clipboard-check"></i> تقييم جماعي (${selectedCheckboxes.length})`;
    } else {
        bulkGradeBtn.disabled = true;
        bulkGradeBtn.innerHTML = '<i class="fas fa-clipboard-check"></i> تقييم جماعي';
    }
    
    // Update select all checkbox state
    const allCheckboxes = document.querySelectorAll('.submission-checkbox:not(:disabled)');
    const checkedCheckboxes = document.querySelectorAll('.submission-checkbox:checked');
    const selectAllCheckbox = document.getElementById('selectAllCheckbox');
    
    if (checkedCheckboxes.length === 0) {
        selectAllCheckbox.indeterminate = false;
        selectAllCheckbox.checked = false;
    } else if (checkedCheckboxes.length === allCheckboxes.length) {
        selectAllCheckbox.indeterminate = false;
        selectAllCheckbox.checked = true;
    } else {
        selectAllCheckbox.indeterminate = true;
    }
}

function showBulkGrading() {
    const selectedCheckboxes = document.querySelectorAll('.submission-checkbox:checked');
    const selectedIds = Array.from(selectedCheckboxes).map(cb => cb.value);
    
    if (selectedIds.length === 0) {
        alert('يرجى تحديد تقديمات للتقييم');
        return;
    }
    
    const infoDiv = document.getElementById('selectedSubmissionsInfo');
    infoDiv.innerHTML = `
        <h6>التقديمات المحددة: ${selectedIds.length}</h6>
        <p class="mb-0">سيتم فتح ${selectedIds.length} تبويب منفصل للتقييم.</p>
    `;
    
    const modal = new bootstrap.Modal(document.getElementById('bulkGradingModal'));
    modal.show();
}

function openSelectedForGrading() {
    const selectedCheckboxes = document.querySelectorAll('.submission-checkbox:checked');
    const examId = '<%= exam._id %>';
    
    selectedCheckboxes.forEach((checkbox, index) => {
        const submissionId = checkbox.value;
        const gradeUrl = `/exams/${examId}/submissions/${submissionId}/grade`;
        
        // Delay opening tabs to avoid browser blocking
        setTimeout(() => {
            window.open(gradeUrl, '_blank');
        }, index * 200);
    });
    
    // Close modal
    const modal = bootstrap.Modal.getInstance(document.getElementById('bulkGradingModal'));
    modal.hide();
    
    // Clear selection after opening
    setTimeout(() => {
        clearSelection();
    }, 1000);
}
</script> 