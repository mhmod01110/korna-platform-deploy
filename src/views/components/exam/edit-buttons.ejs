<%# This component handles exam editing buttons %>
<% if ((user.role === 'teacher' || user.role === 'admin') && (exam.createdBy._id.toString() === user._id.toString() || user.role === 'admin')) { %>
    <div class="btn-group">
        <a href="/exams/<%= exam._id %>/edit" class="btn btn-warning">
            <i class="fas fa-edit"></i> تعديل الاختبار
        </a>
        <% if (exam.status === 'DRAFT') { %>
            <form action="/exams/<%= exam._id %>/publish" method="POST" class="d-inline">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check-circle"></i> نشر للطلاب
                </button>
            </form>
        <% } %>
    </div>
<% } %> 