                        inset 0 0 60px rgba(30, 58, 138, 0.9);
                    pointer-events: none;
                    z-index: 1;
                }

                .slide:nth-child(1) {
                    animation: slideShow1 12s infinite;
                }

                .slide:nth-child(2) {
                    animation: slideShow2 12s infinite;
                }

                .slide:nth-child(3) {
                    animation: slideShow3 12s infinite;
                }

                .slide:nth-child(4) {
                    animation: slideShow4 12s infinite;
                }

